<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="milestone_wizard_view_tree" model="ir.ui.view">
        <field name="name">milestone.wizard.view.tree</field>
        <field name="model">milestone.wizard</field>
        <field name="arch" type="xml">
            <tree create="false" string="Milestone analysis" default_order="date_start">
                <field name="project_id" invisible="1"/>
                <field name="milestone" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="type"/>
                <field name="measure"/>
            </tree>
        </field>
    </record>

    //Project milestone graph view
    <record id="milestone_wizard_view_graph" model="ir.ui.view">
        <field name="name">milestone.wizard.view.graph</field>
        <field name="model">milestone.wizard</field>
        <field name="arch" type="xml">
            <graph string="Analyse des Jalons" sample="1" type="line">
                <field name="milestone" type="row"/>
                <field name="type" type="col"/>
                <field name="measure" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>
