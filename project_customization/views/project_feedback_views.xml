        </record>
        <record id="project_kanban_action_view" model="ir.actions.act_window.view">
            <field name="view_mode">kanban</field>
            <field name="act_window_id" ref="project_customization.project_feedback_action" />
            <field name="view_id" ref="project_customization.project_feedback_view_kanban" />
        </record>

        <record id="project_sharing_tree_action_view" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="act_window_id"
                ref="project_customization.project_sharing_project_feedback_action" />
