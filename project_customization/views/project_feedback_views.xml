<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_project_feedback_filter" model="ir.ui.view">
            <field name="name">project.feedback.filter</field>
            <field name="model">project.feedback</field>
            <field name="arch" type="xml">
                <search string="Search Project">
                    <field name="name" string="Nom" />
                    <field name="numero_marche" string="Numéro" />
                    <field name="autorite_contractante" string="Autorité contractante" />
                    <field name="titulaires" string="Titulaire" />
                    <separator />

                    <group expand="0" string="Group By">
                        <filter string="Type du marché" name="Type"
                            context="{'group_by': 'market_type_id'}" />
                        <filter string="Autorité contractante" name="Autorité"
                            context="{'group_by': 'autorite_contractante'}" />
                        <filter string="Titulaire" name="Titulaire"
                            context="{'group_by': 'titulaires'}" />
                    </group>
                </search>
            </field>
        </record>


        <record id="project_feedback_view_kanban" model="ir.ui.view">
            <field name="name">project.sharing.project.feedback.view.kanban</field>
            <field name="model">project.feedback</field>
            <field name="priority">999</field>
            <field name="groups_id"
                eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]" />
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column o_kanban_project_tasks" sample="1"
