        <record id="project_sharing_project_feedback_view_tree" model="ir.ui.view">
            <field name="name">project.sharing.project.feedback.tree</field>
            <field name="model">project.feedback</field>
            <field name="mode">primary</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <!-- <tree string="Mise à jour" default_order="id desc" delete="1" import="1"
                js_class="feedback_button_in_tree"> -->
                <tree string="Mise à jour" default_order="id desc" delete="1" import="1">
                    <!-- <header>
                        <button string="retour" name="open_my_projects" type="object" class="fa fa-chevron-left"/>
                    </header> -->
                    <field name="project_id" column_invisible="True" />
                    <field name="numero_marche" />
                    <field name="name" string="Titre" />
                    <field name="feedback_date" />
                    <field name="autorite_contractante" />
                    <field name="titulaires" widget="many2many_tags" />
                    <field name="calculated_achievement" avg="Moyenne"
                        string="Taux d'exécution des travaux" />
                    <field name="project_debit_dec" avg="Moyenne" string="Taux Décaissement" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="project_sharing_project_feedback_view_form" model="ir.ui.view">
            <field name="name">project.sharing.project.feedback.view.form</field>
            <field name="model">project.feedback</field>
            <field name="priority">999</field>
            <field name="groups_id"
                eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]" />
            <field name="arch" type="xml">
                <form string="Mise a jour du projet" class="o_form_project_feedbacks">
                    <header>
                        <field name="state" widget="statusbar" />
                        <button name="action_sent" string="Soumettre" type="object"
                            invisible="state!='draft'" class="btn-primary" data-hotkey="v"
                            groups="project_customization.group_project_autorite" />
                        <button name="action_confirm" string="Valider" type="object"
                            invisible="state!='sent'" class="btn-primary" data-hotkey="v"
                            groups="project.group_project_manager" />
                        <button name="action_back_to_draft" string="Remettre en brouillon"
                            type="object" invisible="state!='sent'" class="btn-primary"
                            data-hotkey="v" groups="project.group_project_manager" />
                        <!-- <button name="action_recompute_status" type="object" string="Recalculer
                        les Statuts" class="btn-primary"/> -->

                    </header>

                    <sheet string="Feedback">
                        <div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button class="oe_stat_button" type="object" name="action_view_task_history"
                                icon="fa-history">
                                Tâches
                            </button>
    
                        </div>
                        <div class="oe_title pe-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" class="o_task_name text-truncate"
                                    readonly="state in ('sent','valide')" />
                                <field name="feedback_date" class="o_task_name text-truncate"
                                    readonly="state in ('sent','valide')" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" invisible="1" />
                                <field name="numero_marche"></field>
                                <field name="market_type_id"
                                    options="{'no_open': True, 'no_create': True, 'no_edit': True}" />

                                <field name='currency_id' invisible="1" />
                                <field name="montant_initial" widget="monetary"
                                    options="{'currency_field': 'currency_id'}" />
                                <field name="calculated_achievement"
                                    string="Taux d'exécution des travaux"
                                    widget="progressbar_no_rounding" />
                                <field name="avancement_prevue" widget="progressbar_no_rounding" />
                                <field name="project_debit_dec" string="Taux de Facturation"
                                    widget="progressbar_no_rounding" />
                                <field name="status" widget="status_with_color" />
                                <field name="status_prevue" widget="status_with_color" />
                                
                            </group>
                            <group>
                                <field name='autorite_contractante'
                                    options="{'no_open': True, 'no_create': True, 'no_edit': True}" />
                                <field name="titulaires"    
                                    options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                                    widget="many2many_tags" />
                                <field name="company_id" invisible="1" />
                                <field name="percentage_conf_personnels"
                                    widget="progressbar_no_rounding" />
                                <field name="percentage_conf_materiel"
                                    widget="progressbar_no_rounding" />
                                <field name="delai_consomme" widget="progressbar_no_rounding" />
                            </group>
                        </group>
                        <group string="a saisir">
                            <group>

                                <field name="date_signature" string="Signature" readonly="1" />
                                <field name="date_notification" string="Notification"
                                    readonly="state in ('sent','valide')" />
                                <field name="date_remise_site" string="Remise du site"
                                    readonly="state in ('sent','valide')" />
                                <field name="date_noti_deb_ex"
                                    string="Notification de l'ordre d'exécution"
                                    readonly="state in ('sent','valide')" />
                                <field name="date_p_a_demarrage" string="Paiement avance démarrage"
                                    readonly="state in ('sent','valide')" />
                                <field name="date_mise_mission_c"
                                    string="Mise en place de la mission de contrôle"
                                    readonly="state in ('sent','valide')" />
                                <field name="other_date" readonly="state in ('sent','valide')" />
                                <field name="other_date_description" invisible="other_date==False"
                                    readonly="state in ('sent','valide')" />
                                <field name="date_entr_vig"
                                    string="Entrée en vigueur / Début d'exécution contractuel"
                                    widget="radio" readonly="state in ('sent','valide')" />

                            </group>
                            <group>
                                <group>

                                    <field name='funding_mode_ids' widget="many2many_tags"
                                        readonly="state in ('sent','valide')" />

                                    <field name="nationnalite_titulaire_project"
                                        invisible="nationnalite_titulaire_project==False"
                                        options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                                        readonly="state in ('sent','valide')" />
                                    <field name="nationnalite_titulaire"
                                        invisible="nationnalite_titulaire_project"
                                        options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                                        readonly="state in ('sent','valide')" />
                                </group>
                                <group>
                                    <field name="anteced_ret_exec" widget='radio'
                                        readonly="state in ('sent','valide')" />
                                </group>

                                <group>
                                    <field name="sous_traitance" string="Sous traitance"
                                        widget='radio' readonly="state in ('sent','valide')" />
                                    <field name="sous_traitance_gap"
                                        widget="progressbar_no_rounding" options="{'editable':true}"
                                        string="% Montant ST" invisible="sous_traitance != 'yes'"
                                        readonly="state in ('sent','valide')" />
                                </group>


                                <group>

                                    <field name="resiliation" string="Résiliation" widget='radio'
                                        readonly="state in ('sent','valide')" />

                                    <field name="resiliation_date" string="Date Résiliation"
                                        invisible="resiliation != 'yes'"
                                        readonly="state in ('sent','valide')" />


                                </group>
                                <group>

                                    <!-- <field name="bureau_de_control" options="{'no_open': True,
                                    'no_create': True, 'no_edit': True}" readonly="state != 'sent'"
                                    groups="project.group_project_manager"/>
                                    <field name="bureau_de_suivi" options="{'no_open': True, 'no_create': True, 'no_edit': True}"
                                    readonly="state != 'sent'"
                                    groups="project.group_project_manager"/> -->
                                </group>
                            </group>


                        </group>
                        <notebook>
                            <page name="description_page" string="Qualité et recommandations">
                                <!-- <field name="description"  readonly="state in ('draft','valide')"/> -->
                                <field name="description"/>
                            </page>
                            <page name="reception" string="Réception">
                                <group>
                                    <field name="project_status" widget="radio"
                                        options="{'horizontal':true}"
                                        readonly="state in ('sent','valide')" />
                                </group>
                                <group>
                                    <field name="pre_reception_date"
                                        required="project_status=='pre_reception'"
                                        readonly="state in ('sent','valide')" />
                                    <field name="reception_pro_date"
                                        required="project_status=='reception_pro'"
                                        readonly="state in ('sent','valide')" />
                                    <field name="reception_def_date"
                                        required="project_status=='reception_def'"
                                        readonly="state in ('sent','valide')" />
                                </group>
                            </page>


                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}"
                            help="Follow this transaction." groups="base.group_user" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record id="project_sharing_project_feedback_portal_action" model="ir.actions.act_window">
            <field name="name">Mises à jour</field>
