<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_login_auth" inherit_id="web.login">
        <xpath expr="//form" position="before">
            <!-- Add a bilingual header above the login form -->
            <style>
            .login-image {
                margin-top: 5px;
            }
            .bilingual-header {
                overflow: hidden; /* Hides anything outside the container */
                display: flex;
                flex-direction: column;
                align-items: center;
                
                margin-bottom: 20px;
            }
            .bilingual-line {
                display: flex;
                justify-content: space-between;
                width: 100%;
                text-align: center;
                                                                <!-- margin: 10px 0; -->
            }
            .text-left {
            text-align: left;
            direction: ltr;
            margin-left: 10%;
            font-size: 1em;
            font-weight: bold;
            line-height: 1.5;
            <!-- letter-spacing:0.2px; -->
        }

       .text-right {
            text-align: right;
            direction: rtl;
            margin-right: 10%;
            font-size: 1.7em; /* Slightly larger for Arabic text */
            font-weight: bold;
            line-height: 1.5;
                                            <!-- transform: scale(1.07,1); -->
            <!-- letter-spacing: 0.05em;  /*Increase spacing between Arabic characters */ -->
            word-spacing: 10px; /* Adjust word spacing for better alignment */
            
            
        }
        


            .center-text {
                text-align: center;
                margin: 20px 0;
                font-size: 1.7em;
                font-weight: bold;
                transform: scale(1.1, 1); /* Widen text horizontally without flipping */
            }
                                                            <!-- .bilingual-line .text-left,
            .bilingual-line .text-right {
                font-size: 1.5em;
            }
            .bilingual-line:first-child .text-left,
            .bilingual-line:first-child .text-right {
                font-size: 1.7em;
                
            } -->
            .inline-form-group {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            width: 110%;
        }
        .inline-form-group label {
            width: 30%; /* Adjust label width */
            text-align: right;
            margin-right: 10px;
        }
        .inline-form-group label {
            width: 30%; /* Adjust label width */
            text-align: right;
            margin-right: 10px;
        }
        .inline-form-group input{
            width: calc(70% - 10px); /* Matches the label width and accounts for spacing */
        }
        <!-- .left-text {
            font-size: 1em; /* Adjust size for "Premier Ministère" */
        }

        .right-text {
            font-size: 1.8rem; /* Slightly larger for "الوزارة الأولى" */
            direction: rtl; /* Ensure proper alignment for Arabic text */
        } -->
                                                                        <!-- .btn-primary {
            height: calc(2.5rem + 2px); /* Match the input height */
        } -->
*, *::before, *::after {
    box-sizing: border-box;
    overflow: hidden;
}
            </style>
            <div class="text-center mb-3 login-image">
                <img src="../../project_customization/static/src/images/gov_mr.png" alt="Login Image"/>
            </div>
            <div class="bilingual-header">
                <div class="bilingual-line row align-items-center">
                    <div class="col text-center text-left">
                        <strong>Premier Ministère</strong>
                    </div>
                    <div class="col text-center text-right">
                        <strong>الوزارة الأولى</strong>
                    </div>
                </div>
                <div class="bilingual-line  row align-items-center">
                    <div class="text-left col text-center">
                        <strong>Commission Nationale de Contrôle des Marchés Publics (CNCMP)</strong>
                    </div>
                    <div class="text-right col text-center">
                        <strong>اللجنة الوطنية لرقابة الصفقات العمومية</strong>
                    </div>
                </div>
                <div class="center-text">
                    <strong>منصة متابعة تنفيذ العقود</strong>
                    <br/>
                    <strong>Plateforme de suivi de l'exécution des contrats</strong>
                </div>
            </div>
            <!-- <div class="text-center">
                <b>
                    <i>Authentification</i>
                </b>
            </div> -->
            <div class="text-center center-text">Authentification</div>
        </xpath>


        <xpath expr="//label[@for='login']" position="replace">
            <label for="login" class="form-label fw-bold">Login</label>
        </xpath>
        <xpath expr="//label[@for='password']" position="attributes">
            <attribute name="class">form-label fw-bold</attribute>
        </xpath>

        <!-- Replace placeholder for email input -->
        <xpath expr="//input[@name='login']" position="attributes">
            <attribute name="placeholder">Login</attribute>
        </xpath>
        <!-- Center the form and align labels -->
        <xpath expr="//form" position="attributes">
            <attribute name="class">oe_login_form mx-auto text-center</attribute>
            <attribute name="style">max-width: 400px; text-align: left;width:50%; height:50%</attribute>
        </xpath>

        <!-- Adjust login button bold -->
        <xpath expr="//div[contains(@t-attf-class,'oe_login_buttons')]" position="attributes">
            <attribute name="class">clearfix oe_login_buttons text-right d-grid</attribute>
            <attribute name="style">font-weight: bold;</attribute>
        </xpath>
    </template>


    <template id="login_centered_reset" inherit_id="auth_signup.login" name="Sign up - Réinitialiser le mot de passe Centered">
        <xpath expr="//div[@class='justify-content-between mt-2 d-flex small']" position="replace">
            <!-- <div class="text-right justify-content-right mt-2 d-flex small"> -->
            <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Vous n'avez pas de compte ?</a>
            <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}" class="btn btn-primary text-white">Réinitialiser le mot de passe</a>
            <!-- </div> -->
        </xpath>
    </template>

<template id="custom_login_layout" inherit_id="web.login_layout">
    <xpath expr="//t/div[@class='container py-5']" position="attributes">
        <attribute name="style">overflow: hidden;max-width: 100vw;max-height: 100vh;</attribute>
    </xpath>
</template>
</odoo>
