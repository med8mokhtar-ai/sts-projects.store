<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- display all budget states -->
    
        <record id="crossovered_budget_form_inherit" model="ir.ui.view">
            <field name="name">crossovered.budget.form.inherit</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id" ref="account_budget_oca.crossovered_budget_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar"/>
                </xpath>
            </field>
        </record>
        
        <record id="crossovered_budget_view_form_oca_inherit" model="ir.ui.view">
            <field name="name">crossovered.budget.form.oca.inherit</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id" ref="account_budget_oca.crossovered_budget_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='creating_user_id']" position="after">
                    <field name='department_id' widget="many2one_tags"/>
                    <field name="budget_type"/>
                </xpath>
                <xpath expr="//field[@name='theoretical_amount']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='percentage']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree[1]/field[@name='paid_date']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <!-- <xpath expr="//field[@name='practical_amount']" position="after">
                    <field name="budget_credit"/>
                    <field name="budget_debit"/>
                </xpath> -->

                <xpath expr="//label[@for='date_from']" position="before">
                    <field name='project_id' widget="many2one_tags"/>
                </xpath>
                <xpath expr="//tree" position="replace">
                    <tree>
                        <field name="general_budget_id"/>
                        <field name="analytic_account_id" groups="analytic.group_analytic_accounting" required="1"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="paid_date" groups="base.group_no_one"/>
                        <field name="planned_amount" sum="Planned Amount" widget="monetary"/>
                        <field name="practical_amount" sum="Practical Amount" widget="monetary"/>
                        <field name="theoretical_amount" sum="Theoretical Amount" widget="monetary"/>
                        <field name="percentage"/>
                        <field name="budget_credit"/>
                        <field name="budget_debit"/>
                        <button type="object" name="action_open_budget_entries" string="Entries..." icon="fa-arrow-circle-o-right"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="crossovered_budget_view_tree" model="ir.ui.view">
            <field name="name">crossovered.budget.tree.inherit</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id" ref="account_budget_oca.crossovered_budget_view_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='creating_user_id']" position="after">
                    <field name="department_id" widget="many2one_tags" optional="show"/>
                    <field name='project_id' widget="many2one_tags"/>
                    <field name="budget_type" optional="show"/>
                </xpath>


            </field>
        </record>


    </data>
</odoo>