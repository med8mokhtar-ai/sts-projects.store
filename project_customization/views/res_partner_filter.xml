<odoo>
            <record id="res_partner_inherited_filter" model="ir.ui.view">
                <field name="name">res_partner.inherited.filter</field>
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="account.res_partner_view_search"/>
                <field name="arch" type="xml">
                    <xpath expr="//filter[@name='customer']" position="attributes">
                        <attribute name="string">Clients</attribute>
                     </xpath>
                    <xpath expr="//filter[@name='supplier']" position="attributes">
                        <attribute name="string">Fournisseurs</attribute>
                     </xpath>
                </field>
            </record>
</odoo>