        <record id="project_sharing_project_stop_station_view_tree" model="ir.ui.view">
            <field name="name">project.sharing.project.stop.station.tree</field>
            <field name="model">project.stop.station</field>
            <field name="mode">primary</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">
                <!-- <tree string="Arrêt d’exécution" default_order="id desc" delete="1" import="1" js_class="feedback_button_in_tree"> -->
                <tree string="Arrêt d’exécution" default_order="id desc" delete="1" import="1">
                    <!-- <header>
                        <button string="retour" name="open_my_projects" type="object" class="fa fa-chevron-left"/>
                    </header> -->
                    <field name="project_id" column_invisible="True"/>
                    <field name="numero_marche"/>
                    <field name="name" string="Titre"/>
                    <field name="autorite_contractante"/>
                    <field name="titulaires"  string="Titulaire" widget="many2many_tags"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="project_sharing_project_stop_station_view_form" model="ir.ui.view">
            <field name="name">project.sharing.project.stop.station.view.form</field>
            <field name="model">project.stop.station</field>
            <field name="priority">999</field>
            <field name="groups_id" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                <form string="Mise a jour du projet" class="o_form_project_stop_stations">
                    <header>
                        <field name="state" widget="statusbar" />
                        <button name="action_sent" string="Soumettre" type="object" invisible="state!='draft'" class="btn-primary" data-hotkey="v" groups="project_customization.group_project_autorite"/>
                        <button name="action_confirm" string="Valider" type="object" invisible="state!='sent'" class="btn-primary" data-hotkey="v" groups="project.group_project_manager"/>
                        <button name="action_back_to_draft" string="Remettre en brouillon" type="object" invisible="state!='sent'" class="btn-primary" data-hotkey="v" groups="project.group_project_manager"/>
                    </header>

                    <sheet string="Feedback">
                        <div class="oe_title pe-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" class="o_task_name text-truncate" readonly="state in ('sent','valide')"/>
                                
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" invisible="1"/>
                                <field name="numero_marche"></field>
                                <field name="market_type_id" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>

                                <field name='currency_id' invisible="1"/>
                                <field name="montant_initial" widget="monetary" options="{'currency_field': 'currency_id'}"/>




                            </group>
                            <group>
                                <field name='autorite_contractante' options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="titulaires" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="company_id" invisible="1" />

                            </group>
                        </group>
                        <group string="a saisir">
                            <group>
                                <field name="date_start" class="o_task_name text-truncate" readonly="state in ('sent','valide')"/>
                                <field name="date_end" class="o_task_name text-truncate" />
                            </group>                            
                        </group>
                        <notebook>
                            <page name="description_page" string="Objet">
                                <field name="description" type="html" options="{'collaborative': true, 'allowCommandImage': false, 'allowCommandVideo': false, 'allowCommandFile': false}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" help="Follow this transaction." groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="project_sharing_project_stop_station_portal_action" model="ir.actions.act_window">
            <field name="name">Arrêt d’exécution</field>
            <field name="res_model">project.stop.station</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('project_id', '=', active_id), ('display_in_project', '=', True)]</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Aucun Arrêt d’exécution trouvé. Créons-en un !
                </p>
                <p>
                Suivez la progression de vos retours depuis la création jusqu'à la finalisation.<br/>
                Collaborez efficacement en discutant en temps réel ou par e-mail.
                </p>
            </field>
