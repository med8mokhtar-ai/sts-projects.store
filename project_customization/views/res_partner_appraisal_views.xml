<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
      <record id="res_partner_appraisal_search" model="ir.ui.view">
            <field name="name">res.partner.appraisal.search</field>
            <field name="model">res.partner.appraisal</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <search string="Search Evaluation">
                    <field name="name" string="Nom"/>
                    <field name="numero_marche" string="Numéro"/>
                    <field name="autorite_contractante" string="Autorité contractante"/>
                    <field name="titulaires" string="Titulaire"/>
                    <field name="appraisal_date" string="Date d'évaluation"/>
                    <separator/>
                    <group string="Group By..." expand="0" name="groupby">
                        <filter string="Type du marché" name="Type" context="{'group_by': 'market_type_id'}"/>
                        <filter string="Autorité contractante" name="Autorité" context="{'group_by': 'autorite_contractante'}"/>
                        <filter string="Titulaire" name="Titulaire" context="{'group_by': 'titulaires'}"/>
                        <filter string="Date" name="Date" context="{'group_by': 'appraisal_date'}"/>
                    </group>
                    
                </search>
                
            </field>
        </record>

        <record id="res_partner_appraisal_view_kanban" model="ir.ui.view">
            <field name="name">res.partner.appraisal.view.kanban</field>
            <field name="model">res.partner.appraisal</field>
            <field name="priority">999</field>
            <field name="groups_id" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                <!-- <kanban class="o_kanban_small_column o_kanban_project_tasks" default_group_by="state" archivable="0" import="0"> -->
                <kanban class="o_kanban_small_column o_kanban_project_tasks" archivable="0" import="0">
                    <field name="color"/>
                    <!-- <field name="priority"/> -->
                    <!-- <field name="state" options='{"group_by_tooltip": {"description": "Description"}}'/> -->
                    <!-- <field name="project_id"/> -->
                    <field name="titulaires" string="Titulaire" widget="many2many_tags"/>
                    <!-- <field name="closed_subtask_count"/> -->
                    <!-- <field name="subtask_count"/> -->
                    <field name="autorite_contractante" />
                    <!-- <field name="has_late_and_unreached_milestone"/> -->
                    <!-- <progressbar field="state" colors='{"valide": "success"}'/> -->
                    <templates>
                        <t t-name="kanban-menu" t-if="!selection_mode">
                            <div role="separator" class="dropdown-divider"></div>
                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                        </t>
                        <t t-name="kanban-box">
                            <!-- <div t-attf-class="{{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''}} oe_kanban_card oe_kanban_global_click"> -->
                            <div t-attf-class="{{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''}} oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <!-- <s t-if="!record.active.raw_value"> -->
                                                <field name="name"/>
                                                <field name="appraisal_date"/>
                                                <!-- </s> -->

                                            </strong>
                                            <!-- <span t-if="record.project_id.raw_value">
                                                <br/>
                                                <field name="project_id"/>
                                            </span> -->
                                            <span t-if="record.autorite_contractante.raw_value">
                                                <br/>
                                                <label for="autorite_contractante">Autorité: </label>
                                                <field name="autorite_contractante"/>
                                            </span>
                                            <br />
                                            <t t-if="record.titulaires.value">
                                                <label for="titulaires">Titulaire: </label>
                                                <field name="titulaires" string="Titulaire" widget="many2many_tags"/>
                                            </t>
                                            <br />
                                            <!-- <t t-if="record.calculated_achievement.value">
                                                <label for="calculated_achievement">Taux Exécution: </label>
                                                <field name="calculated_achievement" widget="progressbar_no_rounding"/>
                                            </t>
                                            <br />
                                            <t t-if="record.project_debit_dec.value">
                                                <label for="project_debit_dec">Taux Décaissement: </label>
                                                <field name="project_debit_dec" widget="progressbar_no_rounding"/>

                                            </t> -->

                                        </div>
                                    </div>

                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="res_partner_appraisal_view_tree" model="ir.ui.view">
            <field name="name">res.partner.appraisal.tree</field>
            <field name="model">res.partner.appraisal</field>
            <field name="mode">primary</field>
            <field name="priority">999</field>
            <field name="arch" type="xml">

                <tree string="Evaluation" sample="1" default_order="id desc" delete="1" import="1">
                    <field name="project_id" widget="project" column_invisible="True"/>
                    <field name="name" string="Titre"/>
                    <field name="appraisal_date"/>
                    <field name="autorite_contractante" context="{'default_project_id': project_id}" optional="hide"/>
                    <field name="titulaires"  string="Titulaire" widget="many2many_tags" invisible="not project_id" options="{'no_open': True}"/>
                    <!-- <field name="calculated_achievement" avg="Moyenne" string="Taux d'exécution des travaux"/>
                    <field name="project_debit_dec" avg="Moyenne" string="Taux Décaissement"/> -->
                    <!-- <field name="anteced_non_exe" widget="project_task_state_selection" nolabel="1" options="{'is_toggle_mode': false}"/> -->
                    <field name="anteced_non_exe"/>
                    
                    <field name="company_id" column_invisible="True"/>
                </tree>
            </field>
        </record>

        <record id="res_partner_appraisal_view_form" model="ir.ui.view">
            <field name="name">res.partner.appraisal.view.form</field>
            <field name="model">res.partner.appraisal</field>
            <field name="priority">999</field>
            <field name="groups_id" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
            <field name="arch" type="xml">
                <form string="Project Sharing: Task" class="o_form_res_partner_appraisals">
                    <header>
                        <field name="state" widget="statusbar" />
                        <button name="action_sent" string="Soumettre" type="object" invisible="state!='draft'" class="btn-primary" data-hotkey="v" groups="project_customization.group_project_autorite"/>
                        <button name="action_confirm" string="Valider" type="object" invisible="state!='sent'" class="btn-primary" data-hotkey="v" groups="project.group_project_manager"/>
                        <button name="action_back_to_draft" string="Remettre en brouillon" type="object" invisible="state!='sent'" class="btn-primary" data-hotkey="v" groups="project.group_project_manager"/>

                    </header>
                    
                    <sheet string="Evaluation">
                        <div class="oe_title pe-0">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" class="o_task_name text-truncate"/>
                                <field name="appraisal_date" class="o_task_name text-truncate"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>

                                <field name="titulaires"  string="Titulaire" widget="many2many_tags" options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>

                                <field name='currency_id' invisible="1"/>
                                <field name="montant_initial" widget="monetary" options="{'currency_field': 'currency_id'}"/>




                            </group>
                            <group>
                                <field name="market_type_id"></field>
                                <field name='autorite_contractante' options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>
                                <field name="numero_marche"/>
                                <!-- <field name="retard_constate" hepl="Délai consommé - Délai prévisionnel"/> -->

                                <field name="company_id" invisible="1" />

                            </group>

                            <group>
                                <field name='anteced_non_exe' options="{'no_open': True, 'no_create': True, 'no_edit': True}"/>

                            </group>
                        </group>
                        <notebook>
                            <page name="description_page" string="Objet">
                                <field name="description" type="html" options="{'collaborative': true, 'allowCommandImage': false, 'allowCommandVideo': false, 'allowCommandFile': false}"/>
                            </page>
                        </notebook>
                    </sheet>
                    
                </form>
            </field>
        </record>
        <record id="res_partner_appraisal_portal_action" model="ir.actions.act_window">
            <field name="name">Evaluations</field>
            <field name="res_model">res.partner.appraisal</field>
            <field name="view_mode">kanban,tree,form</field>
            <!-- <field name="search_view_id" ref="project.res_partner_appraisal_view_search"/> -->
            <field name="domain">[('project_id', '=', active_id), ('display_in_project', '=', True)]</field>
            <!-- <field name="context">{'default_project_id': active_id,'delete': False,'active_id_chatter': active_id}</field> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Aucune Evaluation trouvé. Créons-en un !
                </p>
                <p>
                Suivez la progression de vos retours depuis la création jusqu'à la finalisation.<br/>
                Collaborez efficacement en discutant en temps réel ou par e-mail.
                </p>
            </field>
        </record>
        <record id="res_partner_appraisal_action" model="ir.actions.act_window">
            <field name="name">Evaluations</field>
            <field name="res_model">res.partner.appraisal</field>
            <field name="view_mode">kanban,tree,form</field>
            <!-- <field name="search_view_id" ref="project.res_partner_appraisal_view_search"/> -->
            <!-- <field name="domain">[('project_id', '=', active_id), ('display_in_project', '=', True)]</field> -->
            <!-- <field name="context">{'default_project_id': active_id,'delete': False,'active_id_chatter': active_id}</field> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Aucun Evaluation trouvé. Créons-en un !
                </p>
                <p>
                Suivez la progression de vos retours depuis la création jusqu'à la finalisation.<br/>
                Collaborez efficacement en discutant en temps réel ou par e-mail.
                </p>
            </field>
        </record>
        <record id="kanban_action_view" model="ir.actions.act_window.view">
            <field name="view_mode">kanban</field>
            <field name="act_window_id" ref="project_customization.res_partner_appraisal_action"/>
            <field name="view_id" ref="project_customization.res_partner_appraisal_view_kanban"/>
        </record>

        <record id="tree_action_view" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="project_customization.res_partner_appraisal_action"/>
            <field name="view_id" ref="project_customization.res_partner_appraisal_view_tree"/>
        </record>

        <record id="form_action_view" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="act_window_id" ref="project_customization.res_partner_appraisal_action"/>
            <field name="view_id" ref="project_customization.res_partner_appraisal_view_form"/>
        </record>



    </data>
</odoo>
