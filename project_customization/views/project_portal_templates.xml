<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_projects" name="My Projects" inherit_id="project.portal_my_projects">

        <xpath expr="//t/t/tbody" position="replace">
            <tbody>
                <tr t-foreach="projects" t-as="project">
                    <td>

                        <t t-esc="project.numero_marche or project.name"/>
                    </td>
                    <td class="text-end">
                        <a t-attf-href="/my/projects/#{project.id}/feedbacks">
                            <t t-out="project.feedback_count" />
                        Mises à jour
                        </a>

                    </td>
                    <td class="text-end">
                        <a t-attf-href="/my/projects/#{project.id}/avenants">
                            <t t-out="project.count_project_avenant" />
                        Avenants
                        </a>

                    </td>
                    <td class="text-end">
                        <a t-attf-href="/my/projects/#{project.id}/financial_transactions">
                            <t t-out="project.count_financial_transactions" />
                        Situation financière
                        </a>

                    </td>

                    <td class="text-end">
                        <a t-attf-href="/my/projects/#{project.id}/milestones">
                            <t t-out="project.milestone_count" />
                            Jalons
                        </a>
                    </td>
                    <td class="text-end">
                        <a t-attf-href="/my/projects/#{project.id}/stop_stations">
                            <t t-out="project.stop_station_count" />
                            Arrêts
                        </a>
                    </td>
                </tr>
            </tbody>
        </xpath>

    </template>


