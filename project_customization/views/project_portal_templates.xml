    <template id="portal_my_feedbacks" name="Mes Mises à jour">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Mises à jour</t>
            </t>
            <t t-if="not grouped_tasks">
                <div class="alert alert-warning" role="alert">
                    No mises à jour.
                </div>
            </t>
            <!-- <t t-call="project_customization.portal_feedbacks_list"/> -->
        </t>
    </template>
    <template id="portal_my_milestones" name="Jalons">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Mises à jour</t>
            </t>
            <t t-if="not grouped_tasks">
                <div class="alert alert-warning" role="alert">
                    No Jalons.
                </div>
            </t>
            <!-- <t t-call="project_customization.portal_milestones_list"/> -->
        </t>
    </template>

