<odoo>

    <record id="view_api_project_tree" model="ir.ui.view">
        <field name="name">api.project.tree</field>
        <field name="model">api.project</field>
        <field name="arch" type="xml">
            <tree string="Projets API" create="false" delete="false">
                <field name="numero_marche"/>
                <field name="description"/>
                <field name="nom_titulaire"/>
                <field name="autorite_contractante"/>
                <field name="montant_global"/>
                <field name="date_signature"/>
                <field name="message"/>
                <field name="is_processed"/>

            </tree>
        </field>
    </record>

    <record id="view_api_project_form" model="ir.ui.view">
        <field name="name">api.project.form</field>
        <field name="model">api.project</field>
        <field name="arch" type="xml">
            <form string="Projet API">
                <header>
                    <button name="export_comparison_excel"
                        type="object"
                        string="Export Comparison Excel"
                        class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="numero_marche"/>
                        <field name="description"/>
                        <field name="market_type_id"/>
                        <field name="secteur"/>
                        <field name="autorite_contractante"/>
                        <field name="code_autorite_contractante"/>
                        <field name="nom_titulaire"/>
                        <field name="nationalite_titulaire"/>
                        <field name="adresse_titulaire"/>
                        <field name="nif_titulaire"/>
                        <field name="registre_commerce"/>
                    </group>
                    <group>
                        <field name="date_signature"/>
                        <field name="date_notification"/>
                        <field name="delais_execution"/>
                        <field name="montant_global"/>
                        <field name="regime_fiscal"/>
                        <field name="bailleur"/>
                        <field name="financement_etat"/>
                        <field name="message"/>
                        <field name="date_fetched"/>
                <field name="is_processed"/>
                        

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_api_project_kanban" model="ir.ui.view">
        <field name="name">api.project.kanban</field>
        <field name="model">api.project</field>
        <field name="arch" type="xml">
            <kanban string="Projets API" create="false" delete="false">
                <field name="numero_marche"/>
                <field name="description"/>
                <field name="nom_titulaire"/>
                <field name="autorite_contractante"/>
                <field name="montant_global"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <strong>
                                    <t t-esc="record.numero_marche.value"/>
                                </strong>
                                <div>
                                    <t t-esc="record.description.value"/>
                                </div>
                                <div>
                                    <strong>Autorité:</strong>
                                    <t t-esc="record.autorite_contractante.value"/>
                                </div>
                                <div>
                                    <strong>Titulaire:</strong>
                                    <t t-esc="record.nom_titulaire.value"/>
                                </div>
                                <div>
                                    <strong>Montant:</strong>
                                    <t t-esc="record.montant_global.value"/>
 €</div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_api_project_analysis" model="ir.actions.act_window">
        <field name="name">Analyse des Projets API</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.project</field>
        <field name="view_mode">kanban,tree,form,graph,pivot</field>
    </record>

    <menuitem id="menu_api_project_analysis" name="Analyse des Projets API" parent="project.menu_project_report" action="action_api_project_analysis" sequence="30" />

</odoo>
