<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_indicator_view_tree" model="ir.ui.view">
        <field name="name">project.indicator.view.tree</field>
        <field name="model">project.indicator</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Indicateurs de performance">
                <field name="designation"/>
                <field name="uom"/>
                <field name="date"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record id="project_indicator_view_form" model="ir.ui.view">
        <field name="name">project.indicator.view.form</field>
        <field name="model">project.indicator</field>
        <field name="arch" type="xml">
            <form string="Indicateurs de performance">
                <sheet>
                    <group>
                        <field name="project_id" options="{&quot;no_open&quot;:true}"/>
                        <field name="designation"/>
                        <field name="uom"/>
                        <field name="date"/>
                        <field name="value"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>