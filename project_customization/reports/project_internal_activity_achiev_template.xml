<!-- abc_exp_besoin_expression_report_template.xml -->

<odoo>
    <template id="report_project_internal_act_achie_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row text-center" style="margin-top:60px">
                            <div class="col h2" style="margin-top:55px">
                                <span>Détail de l'avancement des activités internes</span>
                            </div>
                        </div>
                        <table class="table o_report_block_table">
                            <thead>
                                <tr>
                                    <th>
                                        <span>Chef du projet</span>
                                    </th>
                                    <th>
                                        <span>Statut</span>
                                    </th>
                                    <th>
                                        <span>Projet</span>
                                    </th>
                                    <th>
                                        <span>Description</span>
                                    </th>
                                    <th>
                                        <span>Av Révues</span>
                                    </th>
                                    <th>
                                        <span>Av Calculé</span>
                                    </th>
                                    <th>
                                        <span>Date de début</span>
                                    </th>
                                    <th>
                                        <span>Date de fin</span>
                                    </th>
                                    <th>
                                        <span>Jours à finir</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs.sorted(lambda r:r.user_id.name)" t-as="table_line">
                                    <t t-groupby="table_line.user_id.name">
                                        <t t-foreach="table_line" t-as="line">
                                            <tr>
                                                <tr>
                                                    <t t-if="line.user_id.name != previous_level">
                                                        <td colspan="8">
                                                            <strong>
                                                                <t t-esc="line.user_id.name"/>
                                                            </strong>
                                                        </td>
                                                    </t>
                                                </tr>
                                                <td>
                                                    <span t-field="table_line.user_id.name"/>
                                                </td>
                                                <t t-set="current_date" t-value="datetime.datetime.now().date()"/>
                                                <t t-if="table_line.date_start &lt; current_date">
                                                    <td>
                                                        <span>En Cours</span>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td>
                                                        <span>En Attente</span>
                                                    </td>
                                                </t>
                                                <td>
                                                    <span t-field="table_line.display_name"/>
                                                </td>
                                                <td>
                                                    <span t-field="table_line.description"/>
                                                </td>
                                                <td>
                                                    <span t-esc="table_line.format_percentage(table_line.achievement)"/>
                                                </td>
                                                <td>
                                                    <span t-esc="table_line.format_percentage(table_line.calculated_achievement)"/>
                                                </td>

                                                <td>
                                                    <span t-field="table_line.date_start"/>
                                                </td>
                                                <td>
                                                    <span t-field="table_line.date"/>
                                                </td>
                                                <td>
                                                    <span t-field="table_line.days_to_end"/>
                                                </td>
                                            </tr>
                                            <t t-set="previous_level" t-value="line.user_id.name"/>
                                        </t>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </div>
            </t>
        </t>
    </template>
</odoo>
