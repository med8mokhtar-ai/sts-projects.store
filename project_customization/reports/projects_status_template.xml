<odoo>

    <template id="custom_layout">
        <div class="header">
            <div class="row">
                <div class="col-12">

                    <img src="project_customization/static/src/images/logo.png" style="width: 100%; height: 150px;"/>
                </div>

            </div>
        </div>
        <div class="article">
            <t t-out="0"/>

        </div>

        <div class="footer">

            <hr style="color:black;"/>
            <center>
                <p>انواكشوط - موريتانيا Mauritania - Nouakchott</p>
            </center>
            <center>
                <p style="color:blue;">https://mousseyir.mtnima.gov.mr/</p>
            </center>


        </div>

    </template>

    <template id="project_customization.report_projects_status_view">
        <t t-call="web.html_container">
            <div class="page">
                <t t-call="project_customization.custom_layout">

                    <t t-set="grouped_projects" t-value="[]"/>
                    <t t-foreach="docs" t-as="doc">
                        <t t-if="{'user_id': doc.user_id} not in grouped_projects">
                            <t t-set="grouped_projects" t-value="[{'user_id': doc.user_id}]"/>


                            <strong>
                                <center>
                                    <h2>Situationdes projets</h2>
                                </center>
                            </strong>
                            <br/>
                            <br/>


                            <div>


                                <table class="table table-bordered">


                                    <thead>
                                        <tr>
                                            <th>
                                                <span>ID</span>
                                            </th>
                                            <th>
                                                <span>Id-ref</span>
                                            </th>
                                            <th>
                                                <span>Projet</span>
                                            </th>
                                            <th>
                                                <span>Chef du projet
                                                </span>
                                            </th>
                                            <th>
                                                <span>Direction</span>
                                            </th>
                                            <th>
                                                <span>Date de début</span>
                                            </th>
                                            <th>
                                                <span>Date de fin</span>
                                            </th>
                                            <th>
                                                <span>Jours à finir</span>
                                            </th>
                                            <th>
                                                <span>% Av Révues</span>
                                            </th>
                                            <th>
                                                <span>% Av Calculé</span>
                                            </th>
                                            <th>
                                                <span>Budget prévisionnel</span>
                                            </th>
                                            
                                            <th>
                                                <span>Décaissement</span>
                                            </th>
                                            
                                            <th>
                                                <span>Sources de financement</span>
                                            </th>
                                        </tr>
                                    </thead>


                                    <tbody t-att-class="'text-center'">
                                        <t t-foreach="docs" t-as="project">
                                            <t t-if="project.user_id == doc.user_id">
                                                <tr>
                                                    <td>
                                                        <span t-field="project.id"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.reference"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.display_name"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.user_id.name"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.department_id.name"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.date_start"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.date"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.days_to_end"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="doc.format_percentage(doc.achievement)"/>
                                                    </td>
                                                    <td>
                                                        <span t-esc="doc.format_percentage(doc.calculated_achievement)"/>
                                                    </td>
                                                    <td>
                                                        <span t-field="project.budget"/>
                                                    </td>
                                                    

                                                    <td>
                                                        <span t-field="project.project_debit"/>
                                                    </td>
                                                    
                                                    <td t-foreach="project.funding_mode_ids" t-as="l">
                                                        <span t-field="l.name"/>
                                                    </td>

                                                </tr>


                                            </t>
                                        </t>


                                    </tbody>


                                </table>
                            </div>


                        </t>


                    </t>
                </t>
            </div>

        </t>
    </template>
</odoo>