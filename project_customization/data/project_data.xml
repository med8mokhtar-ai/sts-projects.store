        <!-- This cron job will call the fetch_and_insert_projects method daily at midnight -->
        <record id="ir_cron_fetch_and_insert_projects" model="ir.cron">
            <field name="name">Récupérer les projets de l'API du SI</field>
            <field name="model_id" ref="project_customization.model_api_project"/>
		    <field name="priority" eval="5"/>
            <field name="state">code</field>
            <field name="code">model.fetch_and_insert_projects()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>  
		    <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 01:00:00')"/>
        </record>
        <!-- Action planifiée pour exécuter la méthode verify_and_create_projects -->
        <record id="ir_cron_verify_and_create_projects" model="ir.cron">
            <field name="name">Vérifier et Créer les projets de l'API du SI</field>
            <field name="model_id" ref="project_customization.model_api_project"/>
		    <field name="priority" eval="5"/>
            <field name="state">code</field>
            <field name="code">model.verify_and_create_projects()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>  
		    <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 02:00:00')"/>
        </record>
